<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.example.applicastertest.ui.input.InputFragment">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/f_input_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/f_input_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/term_to_search"
            android:inputType="text"
            android:lines="1" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/f_input_btn"
        style="@style/Base.Widget.AppCompat.Button.ButtonBar.AlertDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end|bottom"
        android:padding="5dp"
        android:text="@string/search" />


</LinearLayout>
